{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vintage Radio",
  "version": "1.0.0",
  "identifier": "com.philjung.vintage-radio",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vintage Radio",
        "width": 900,
        "height": 600,
        "minWidth": 700,
        "minHeight": 500,
        "decorations": true,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
